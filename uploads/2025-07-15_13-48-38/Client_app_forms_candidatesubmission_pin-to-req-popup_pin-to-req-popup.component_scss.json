```scss
@use 'sass:math';

$primary-color: #007bff;
$secondary-color: #6c757d;
$border-radius: 0.25rem;

.pin-to-req-popup {
  background-color: #fff;
  border: 1px solid #dee2e6;
  border-radius: $border-radius;
  padding: 1rem;

  &__header {
    font-size: math.div(1.5rem, 1); // using math.div for division as per modern Sass practices
    color: $primary-color;
    margin-bottom: 0.5rem;
  }

  &__body {
    font-size: 1rem;
    line-height: 1.5;
    color: $secondary-color;
  }

  &__footer {
    text-align: right;
    margin-top: 1rem;
  }
}
