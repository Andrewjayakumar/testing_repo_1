import { Pipe, PipeTransform } from '@angular/core';

@Pipe({
  name: 'dateTz'
})
export class DateTzPipe implements PipeTransform {
  transform(value: Date | string | number, ...args: any[]): string {
    const date = new Date(value);
    return date.toLocaleString();
  }
}
